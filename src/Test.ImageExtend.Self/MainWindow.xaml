<Window
    x:Class="Test.ImageExtend.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:imageEx="clr-namespace:Test.ImageExtend.ImageEx"
    xmlns:local="clr-namespace:Test.ImageExtend"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Test.ImageExtend.ViewModels"
    Title="MainWindow"
    Width="1200"
    Height="650"
    d:DataContext="{d:DesignInstance vm:MainViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  标记上右键弹窗——accquire/scale/delete  -->
            <Border
                Grid.Column="0"
                Margin="5"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="5">

                <imageEx:ImageEx
                    x:Name="ImageExImage"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    imageEx:ImageEx.GridCol="10"
                    imageEx:ImageEx.GridRow="7"
                    imageEx:ImageEx.GridColor="Red"
                    imageEx:ImageEx.GridThickness="1"
                    imageEx:ImageEx.GridFillColor="LightYellow"
                    ImageSource="{Binding Frame}">

                    <imageEx:ImageEx.MarkerMenu>
                        <ContextMenu>
                            <MenuItem Command="{Binding AcquireRamanDataCommand}" Header="Acquire" />
                            <MenuItem
                                Command="imageEx:ImageEx.MarkerCommand"
                                CommandParameter="{x:Static imageEx:ImageEx.ZoomScale}"
                                Header="Scale" />
                            <MenuItem
                                Command="imageEx:ImageEx.MarkerCommand"
                                CommandParameter="{x:Static imageEx:ImageEx.Delete}"
                                Header="Delete" />
                        </ContextMenu>
                    </imageEx:ImageEx.MarkerMenu>

                </imageEx:ImageEx>

            </Border>

            <Border
                Grid.Column="1"
                Margin="5"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="5">

                <imageEx:ImageEx x:Name="ImageViewer" ImageSource="Image/1_32bit.bmp" />
            </Border>
        </Grid>

        <Button
            Grid.Row="1"
            Width="100"
            Height="30"
            Content="动画显示" />
    </Grid>

</Window>
